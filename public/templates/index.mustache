<div class="row">
  <div id="index">
    <h1>Coach Tracker</h1>
    <p>Welcome to the coach tracker</p>
    <form id="indexform">
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="curlocation">Your location:</label>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on"><a href="#" id="togglelocation"><i class="icon-loading"></i></a></span><input type="text" class="span2" id="curlocation"/>
            </div>
            <p class="help-block">If your location is not correct then please click the icon above and input your location manually</p>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="showstops">Show stops near me</label>
          <div class="controls">
            <button class="btn btn-primary" id="findstops">Go!</button>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="destination">Or select your destination:</label>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on"><i class="icon-flag"></i> </span><input type="text" class="span2" id="destination"/>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
